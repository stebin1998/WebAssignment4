<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">

        <table class="table">
            <!-- Table Headings -->
            <thead>
                <tr>
                    <th> Post ID</th>
                    <th>Title</th>
                    <th>Post Date</th>
                    <th>Category</th>
                    <th>Published</th>
                </tr>
            </thead>
            <!-- Table Body -->
            <tbody>
                {{#each posts}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.postDate}}</td>
                  <!--Category as a link -->
                    <td><a href="/categories/{{this.category}}">{{this.category}}</a></td>
                    <td>{{this.published}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        </div>
    </div>
</div>
<!--Error message displaying -->
<div class="col-md-12 text-center">
    {{#unless posts}}
    <strong>{{message}}</strong>
    {{/unless}}
    </div>
